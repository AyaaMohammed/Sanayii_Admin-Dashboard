@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<style>
    .logout-container {
        background-color: #f8f9fa;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
    }

    .logout-content {
        background: white;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        padding: 3rem;
        max-width: 500px;
        width: 100%;
    }

    h1 {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .logout-icon {
        font-size: 4rem;
        color: #4e73df;
        margin-bottom: 1.5rem;
        display: inline-block;
    }

    .logout-message {
        color: #495057;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .btn-logout {
        background-color: #4e73df;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 24px;
        font-weight: 500;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-logout:hover {
            background-color: #3a5ec0;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

        .btn-logout:active {
            transform: translateY(0);
        }

    .login-redirect {
        margin-top: 2rem;
        color: #6c757d;
    }

        .login-redirect a {
            color: #4e73df;
            text-decoration: none;
            font-weight: 500;
        }

            .login-redirect a:hover {
                text-decoration: underline;
            }
</style>

<div class="logout-container">
    <div class="logout-content">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="logout-icon">
                <i class="bi bi-box-arrow-right"></i>
            </div>
            <h1>Ready to leave?</h1>
            <p class="logout-message">You're currently logged in. Click the button below to securely log out of your account.</p>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn-logout">
                    <i class="bi bi-box-arrow-right me-2"></i>Log Out
                </button>
            </form>
        }
        else
        {
            <div class="logout-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <h1>Logged Out Successfully</h1>
            <p class="logout-message">You have successfully logged out of the application.</p>
            <div class="login-redirect">
                Want to sign in again? <a asp-page="./Login">Click here</a>
            </div>
        }
    </div>
</div>