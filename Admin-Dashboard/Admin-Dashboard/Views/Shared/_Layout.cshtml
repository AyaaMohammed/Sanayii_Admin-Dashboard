@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/Admin_Dashboard.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
        theme: {
        extend: {
        colors: {
        primary: '#262e39', // Your original header/footer color
        accent: '#3b82f6',
        },
        animation: {
        'fade-in': 'fadeIn 0.3s ease-in-out',
        },
        keyframes: {
        fadeIn: {
        '0%': { opacity: '0', transform: 'translateY(-10px)' },
        '100%': { opacity: '1', transform: 'translateY(0)' },
        },
        },
        }
        }
        }
    </script>
</head>
<body class="pt-16 bg-gray-50">
    <!-- Navbar - Keeping original color -->
    <header class="fixed top-0 left-0 w-full z-50 bg-[#262e39] text-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <!-- Logo -->
                <div class="flex items-center">
                    <img src="~/images/logo.png" height="50px" width="50px" />
                </div>

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center space-x-8">


                    <!-- User Auth Section -->
                    <div class="ml-6 flex items-center">
                        <div class="flex items-center space-x-6">

                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-action="All" asp-controller="Category" class="hover:text-gray-300 transition-colors flex items-center">
                                    <i class="bi bi-grid mr-1"></i> Category
                                </a>
                                <a asp-action="index" asp-controller="Payment" class="hover:text-gray-300 transition-colors flex items-center">
                                    <i class="bi bi-credit-card mr-1"></i> Payment
                                </a>
                                <a asp-action="index" asp-controller="Contract" class="hover:text-gray-300 transition-colors flex items-center">
                                    <i class="bi bi-file-earmark-text mr-1"></i> Contracts
                                </a>

                                <!-- User Dropdown -->
                                <div class="relative group">
                                    <button class="flex items-center space-x-1 hover:text-gray-300 transition-colors">
                                        <i class="bi bi-people"></i>
                                        <span>User</span>
                                        <i class="bi bi-chevron-down text-xs transition-transform group-hover:rotate-180"></i>
                                    </button>
                                    <div class="absolute hidden group-hover:block mt-2 bg-white text-gray-800 rounded-md shadow-lg w-48 py-1 z-10 animate-fade-in">
                                        <a class="block px-4 py-2 hover:bg-gray-100 transition-colors" asp-action="index" asp-controller="Admin">
                                            <i class="bi bi-shield-lock mr-2"></i>Admin
                                        </a>
                                        <a class="block px-4 py-2 hover:bg-gray-100 transition-colors" asp-action="index" asp-controller="Artisan">
                                            <i class="bi bi-hammer mr-2"></i>Artisan
                                        </a>
                                        <a class="block px-4 py-2 hover:bg-gray-100 transition-colors" asp-action="index" asp-controller="Customer">
                                            <i class="bi bi-person mr-2"></i>Customer
                                        </a>
                                    </div>
                                </div>
                                <!-- User Profile & Security -->
                                <div class="relative group ml-4">
                                    <button class="flex items-center space-x-1 hover:text-accent transition-colors">
                                        <i class="bi bi-person-circle text-xl hover:scale-110 transition-transform"></i>
                                    </button>
                                    <div class="absolute right-0 hidden group-hover:block mt-2 bg-white text-gray-800 rounded-md shadow-lg w-48 py-1 z-50 border border-gray-200 animate-fade-in">
                                        <div class="px-4 py-2 text-sm border-b border-gray-100">
                                            <div class="font-medium">@User.Identity?.Name</div>
                                            <div class="text-xs text-gray-500">Admin</div>
                                        </div>


                                        <a asp-area="Identity" asp-page="/Account/Manage/Index"
                                        class="block px-4 py-2 hover:bg-gray-100 transition-colors text-sm hover:text-accent">
                                            <i class="bi bi-person mr-2"></i> Edit Profile
                                        </a>

                                        <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword"
                                        class="block px-4 py-2 hover:bg-gray-100 transition-colors text-sm hover:text-accent">
                                            <i class="bi bi-key mr-2"></i> Change password
                                        </a>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                            <button type="submit" class="w-full text-left px-4 py-2 hover:bg-gray-100 transition-colors text-sm flex items-center hover:text-accent">
                                                <i class="bi bi-box-arrow-right mr-2"></i> LogOut
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <div class="relative group">
                                    <button class="flex items-center space-x-1 hover:text-gray-300 transition-colors">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <div class="absolute hidden group-hover:block mt-2 bg-white text-gray-800 rounded-md shadow-lg w-48 py-1 z-10 animate-fade-in">
                                        <a class="block px-4 py-2 hover:bg-gray-100 transition-colors" asp-action="index" asp-controller="Service">
                                            <i class="bi bi-gear-fill mr-2"></i>Service
                                        </a>
                                        <a class="block px-4 py-2 hover:bg-gray-100 transition-colors" asp-action="index" asp-controller="Discounts">
                                            <i class="bi bi-percent mr-2"></i>Discounts
                                        </a>
                                        <a class="block px-4 py-2 hover:bg-gray-100  transition-colors" asp-action="index" asp-controller="CustomerDiscounts">
                                            <i class="bi bi-tags mr-1"></i>CustomerOffers
                                        </a>
                                        <a class="block px-4 py-2 hover:bg-gray-100 transition-colors" asp-action="index" asp-controller="Violations">
                                            <i class="bi bi-exclamation-triangle-fill mr-2"></i>Violations
                                        </a>
                                        <a class="block px-4 py-2 hover:bg-gray-100 transition-colors" asp-action="index" asp-controller="Review">
                                            <i class="bi bi-chat-left-dots mr-2"></i>Review
                                        </a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="flex items-center space-x-3">
                                    <a asp-area="Identity" asp-page="/Account/Login" class="text-white hover:text-gray-300 transition-colors text-sm border border-white rounded-md px-4 py-1.5">
                                        Login
                                    </a>

                                </div>
                            }


                        </div>
                    </div>



                </nav>

                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none" aria-controls="mobile-menu" aria-expanded="false" id="mobile-menu-button">
                        <span class="sr-only">Open main menu</span>
                        <i class="bi bi-list text-xl"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile menu -->
        <div class="hidden md:hidden bg-[#262e39]" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <a asp-action="All" asp-controller="Category" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">Category</a>
                <a asp-action="Index" asp-controller="Payment" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">Payment</a>
                <a asp-action="Index" asp-controller="Contract" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">Contracts</a>

                <!-- User Dropdown -->
                <div class="px-3 py-2">
                    <button class="w-full flex justify-between items-center" id="mobile-user-dropdown-button">
                        <span>User</span>
                        <i class="bi bi-chevron-down"></i>
                    </button>
                    <div class="hidden mt-2 pl-4 space-y-2" id="mobile-user-dropdown">
                        <a asp-action="Index" asp-controller="Admin" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">Admin</a>
                        <a asp-action="Index" asp-controller="Artisan" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">Artisan</a>
                        <a asp-action="Index" asp-controller="Customer" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">Customer</a>
                    </div>
                </div>

                @if (SignInManager.IsSignedIn(User))
                {
                    <!-- Edit Profile  Linlk -->
                    <a asp-area="Identity" asp-page="/Account/Manage/Index"
                    class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700 hover:text-accent transition-colors">
                        <i class="bi bi-key mr-2"></i> Edit Profile
                    </a>
                    <!-- Mobile Change Password Link -->
                    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword"
                    class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700 hover:text-accent transition-colors">
                        <i class="bi bi-key mr-2"></i> Change password
                    </a>

                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="px-3 py-2">
                        <button type="submit" class="w-full text-left rounded-md text-base font-medium hover:bg-gray-700 flex items-center">
                            <i class="bi bi-box-arrow-right mr-2"></i> Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">Login</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="block px-3 py-2 rounded-md text-base font-medium bg-white text-[#262e39]">Register</a>
                }
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen">
        @RenderBody()
    </main>

    <!-- Footer - Keeping original color -->
    <footer class="bg-[#262e39] text-white py-12 px-4 sm:px-6">
        <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Logo & Social -->
            <div class="flex flex-col space-y-4">
                <div class="text-2xl font-bold tracking-wider flex items-center">
                    <img src="~/images/logo.png" height="50px" width="50px" />
                </div>
                <p class="text-gray-300 text-sm">Connecting artisans with clients through quality craftsmanship.</p>
                <div class="flex space-x-3">
                    <a href="#" class="bg-white text-[#262e39] p-2 rounded-full hover:bg-gray-200 transition-colors">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" class="bg-white text-[#262e39] p-2 rounded-full hover:bg-gray-200 transition-colors">
                        <i class="bi bi-linkedin"></i>
                    </a>
                    <a href="#" class="bg-white text-[#262e39] p-2 rounded-full hover:bg-gray-200 transition-colors">
                        <i class="bi bi-youtube"></i>
                    </a>
                    <a href="#" class="bg-white text-[#262e39] p-2 rounded-full hover:bg-gray-200 transition-colors">
                        <i class="bi bi-instagram"></i>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="font-bold text-white text-lg mb-4 flex items-center">
                    <i class="bi bi-link-45deg mr-2"></i> Navigation
                </h3>
                <ul class="space-y-2 text-sm">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li>
                            <a href="#" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i> Home
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Service" asp-action="Index" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i> Services
                            </a>
                        </li>
                        <li>
                            <a asp-controller="CustomerDiscounts" asp-action="Index" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i> Customer Discounts
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Discounts" asp-action="Index" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i> Discounts
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Review" asp-action="Index" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i> Reviews
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Violations" asp-action="Index" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i> Violations
                            </a>
                        </li>
                        <li>
                            <a asp-action="All" asp-controller="Category" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i>Category
                            </a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Payment" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i>Payment
                            </a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Contract" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i>Contracts
                            </a>
                        </li
                        <li>
                            <a asp-action="Index" asp-controller="ServiceRequestPayment" class="text-gray-300 hover:text-white transition-colors flex items-center">
                                <i class="bi bi-chevron-right mr-1 text-xs"></i>Service Requests
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
							<a asp-area="Identity" asp-page="/Account/Login" class="text-gray-300 hover:text-white transition-colors flex items-center">
								<i class="bi bi-chevron-right mr-1 text-xs"></i> Login
							</a>
							<a asp-area="Identity" asp-page="/Account/Register" class="text-gray-300 hover:text-white transition-colors flex items-center">
								<i class="bi bi-chevron-right mr-1 text-xs"></i> Register
							</a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Contact -->
            <div>
                <h3 class="font-bold text-white text-lg mb-4 flex items-center">
                    <i class="bi bi-envelope mr-2"></i> Contact
                </h3>
                <address class="not-italic text-sm text-gray-300 space-y-2">
                    <div class="flex items-start">
                        <i class="bi bi-geo-alt mt-1 mr-2 text-white"></i>
                        <p>123 Craft Street, Artisan District<br>Creative City, CC 10101</p>
                    </div>
                    <div class="flex items-center">
                        <i class="bi bi-telephone mr-2 text-white"></i>
                        <p>+1 (555) 123-4567</p>
                    </div>
                    <div class="flex items-center">
                        <i class="bi bi-envelope mr-2 text-white"></i>
                        <p>support@craftconnect.com</p>
                    </div>
                </address>
            </div>

            <!-- Help Cards -->
            <div class="space-y-4">
                <div class="border border-gray-600 rounded-xl p-5 hover:border-white transition-colors group cursor-pointer">
                    <div class="flex justify-between items-start">
                        <div>
                            <h4 class="font-bold text-white group-hover:text-white transition-colors">Need Help?</h4>
                            <p class="text-sm text-gray-300 mt-1">Didn't find what you were looking for or need support?</p>
                        </div>
                        <div class="text-white group-hover:translate-x-1 transition-transform">
                            <i class="bi bi-arrow-right-circle text-xl"></i>
                        </div>
                    </div>
                </div>
                <div class="border border-gray-600 rounded-xl p-5 hover:border-white transition-colors group cursor-pointer">
                    <div class="flex justify-between items-start">
                        <div>
                            <h4 class="font-bold text-white group-hover:text-white transition-colors">Custom Project?</h4>
                            <p class="text-sm text-gray-300 mt-1">Looking for a custom service from an artisan?</p>
                        </div>
                        <div class="text-white group-hover:translate-x-1 transition-transform">
                            <i class="bi bi-arrow-right-circle text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="mt-12 border-t border-gray-700 pt-6 flex flex-col md:flex-row items-center justify-between text-sm text-gray-400">
            <p>Sanayii 2025 © All rights reserved</p>
            <div class="flex space-x-6 mt-4 md:mt-0">
                <a href="#" class="hover:text-white transition-colors">Privacy Policy</a>
                <a href="#" class="hover:text-white transition-colors">Cookie Settings</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-button').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // Mobile user dropdown toggle
        document.getElementById('mobile-user-dropdown-button').addEventListener('click', function() {
            const dropdown = document.getElementById('mobile-user-dropdown');
            dropdown.classList.toggle('hidden');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>