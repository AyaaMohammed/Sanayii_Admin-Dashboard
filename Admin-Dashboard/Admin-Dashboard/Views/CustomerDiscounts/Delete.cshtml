@model Admin_Dashboard.Models.CustomerDiscount

@{
    ViewData["Title"] = "Delete Customer Discount";
    ViewBag.pagename = "Customer Discounts";
}

<partial name="_Banner" />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h1 class="fw-bold text-2xl text-dark mb-4 align-center">Confirm Deletion</h1>
        </div>
        <div class="card-body">
            <p class="lead">Are you sure you want to delete this customer discount?</p>

            <dl class="row">
                <dt class="col-sm-4 text-muted">Date Given</dt>
                <dd class="col-sm-8">@Model.DateGiven.ToShortDateString()</dd>

                <dt class="col-sm-4 text-muted">Customer</dt>
                <dd class="col-sm-8">@Model.Customer?.FName @Model.Customer?.LName</dd>

                <dt class="col-sm-4 text-muted">Discount Name</dt>
                <dd class="col-sm-8">@Model.Discount?.Name</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="CustomerId" />
                <input type="hidden" asp-for="DiscountId" />
                <div class="d-flex">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
