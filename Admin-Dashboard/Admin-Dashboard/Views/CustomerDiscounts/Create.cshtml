@model Admin_Dashboard.Models.CustomerDiscount

@{
    ViewData["Title"] = "Create";
    ViewBag.pagename = "Customer Discounts";
}

<partial name="_Banner" />
<section class="container" style="
    margin-top: 3%;
    margin-bottom: 3%;
">
    <div class="row">
        <div class="form">
            <form method="post" asp-action="Create">
                <h1 class="fw-bold text-2xl text-dark mb-4 align-center">Create Customer Discount </h1>
                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label">Customer Username</label>
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountId" class="control-label"></label>
                    <select asp-for="DiscountId" class="form-control" asp-items="ViewBag.DiscountId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DateGiven" class="control-label"></label>
                    <input asp-for="DateGiven" class="form-control" />
                    <span asp-validation-for="DateGiven" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="text-align:center;background-color:#262e39;
                color:#fff;width: 119px;height: 50px;margin-bottom:30px">
                    Submit
                </button>

            </form>
        </div>


</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>