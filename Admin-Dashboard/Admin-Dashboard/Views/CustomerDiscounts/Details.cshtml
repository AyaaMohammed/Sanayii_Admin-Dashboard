@model Admin_Dashboard.Models.CustomerDiscount

@{
    ViewData["Title"] = "Details";
    ViewBag.pagename = "Customer Discounts";
}

<partial name="_Banner" />
<section class="container p-3">
    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h1 class="fw-bold fs-2 text-center mb-4">Customer Discount Details</h1>

            <p class="card-text text-2xl mb-2">
                <strong>Date Given:</strong> @Model.DateGiven.ToShortDateString()
            </p>
            <p class="card-text text-2xl mb-2">
                <strong>Customer:</strong> @Model.Customer?.FName @Model.Customer?.LName
            </p>
            <p class="card-text text-2xl mb-2">
                <strong>Discount:</strong> @Model.Discount?.Name
            </p>

            <a asp-action="Index" class="btn w-100 text-white" style="background-color:#262e39;">← Back to List</a>
        </div>
    </div>
</section>