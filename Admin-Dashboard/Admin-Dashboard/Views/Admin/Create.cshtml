@model Admin_Dashboard.ViewModels.AdminViewModel

@{
    ViewData["Title"] = "Create Admin";
    ViewBag.pagename = "Add new Admin";
}

<style>
    .card {
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .bg-gradient-primary {
        background: #6c757d;
    }

    .form-floating label {
        color: #6c757d;
    }

    .form-control:focus {
        border-color: #3f51b5;
        box-shadow: 0 0 0 0.2rem rgba(63, 81, 181, 0.25);
    }

    .was-validated .form-control:valid ~ .valid-feedback {
        display: block;
    }

    #phones-container .input-group {
        transition: all 0.3s ease;
    }

        #phones-container .input-group:hover {
            transform: translateX(2px);
        }

    .form-label {
        font-weight: 600;
    }

    .btn-outline-primary,
    .btn-outline-danger {
        transition: all 0.2s ease-in-out;
    }

        .btn-outline-primary:hover,
        .btn-outline-danger:hover {
            transform: scale(1.05);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h2 class="h4 mb-0"><i class="bi bi-person-plus me-2"></i>Create New Admin</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            <strong>Please fix the following errors:</strong>
                            <ul class="mb-0 ps-3"></ul>
                        </div>

                        <div class="row g-3">
                            <!-- First Name -->
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="FName" class="form-control" placeholder="First Name" required pattern="[A-Za-z]{2,50}" />
                                    <label asp-for="FName"></label>
                                    <span asp-validation-for="FName" class="invalid-feedback"></span>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="LName" class="form-control" placeholder="Last Name" required pattern="[A-Za-z]{2,50}" />
                                    <label asp-for="LName"></label>
                                    <span asp-validation-for="LName" class="invalid-feedback"></span>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>

                            <!-- Age -->
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Age" class="form-control" placeholder="Age" type="number" min="18" max="100" required />
                                    <label asp-for="Age"></label>
                                    <span asp-validation-for="Age" class="invalid-feedback"></span>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="Email" type="email" required />
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>

                            <!-- Government -->
                            <div class="col-md-4 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Government" class="form-control" placeholder="Government" required />
                                    <label asp-for="Government"></label>
                                    <span asp-validation-for="Government" class="invalid-feedback"></span>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>

                            <!-- City -->
                            <div class="col-md-4 mb-3">
                                <div class="form-floating">
                                    <input asp-for="City" class="form-control" placeholder="City" required />
                                    <label asp-for="City"></label>
                                    <span asp-validation-for="City" class="invalid-feedback"></span>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>

                            <!-- Street -->
                            <div class="col-md-4 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Street" class="form-control" placeholder="Street" required />
                                    <label asp-for="Street"></label>
                                    <span asp-validation-for="Street" class="invalid-feedback"></span>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                            </div>

                            <!-- Salary -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Salary" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Salary" class="form-control" placeholder="Salary" type="number" step="0.01" min="1000" max="100000" required />
                                </div>
                                <span asp-validation-for="Salary" class="invalid-feedback d-block"></span>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Phone Numbers -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Phone Numbers</label>
                                <div id="phones-container">
                                    <div class="input-group mb-2">
                                        <input name="Phones" class="form-control" placeholder="Phone Number" type="tel" pattern="[0-9]{8,15}" required />
                                        <button type="button" class="btn btn-outline-danger" onclick="removePhone(this)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-outline-primary mt-2" onclick="addPhone()">
                                    <i class="bi bi-plus-circle"></i> Add Another Phone
                                </button>
                                <span class="text-muted small d-block mt-1">At least one phone number is required</span>
                            </div>

                            <!-- Buttons -->
                            <div class="col-12 mt-4">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary px-4">
                                        <i class="bi bi-arrow-left-circle me-2"></i>Back to List
                                    </a>
                                    <button type="submit" class="btn btn-primary px-4">
                                        <i class="bi bi-save me-2"></i>Create Admin
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function addPhone() {
            const container = document.getElementById("phones-container");
            const div = document.createElement("div");
            div.className = "input-group mb-2";
            div.innerHTML = `
                <input name="Phones" class="form-control" placeholder="Phone Number"
                       type="tel" pattern="[0-9]{8,15}" required />
                <button type="button" class="btn btn-outline-danger" onclick="removePhone(this)">
                    <i class="bi bi-trash"></i>
                </button>
            `;
            container.appendChild(div);
        }

        function removePhone(button) {
            const container = document.getElementById("phones-container");
            if (container.children.length > 1) {
                button.closest('.input-group').remove();
            } else {
                alert("At least one phone number is required");
            }
        }

        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();

                        const summary = form.querySelector('.alert-danger ul');
                        summary.innerHTML = '';

                        const invalidFields = form.querySelectorAll(':invalid');
                        invalidFields.forEach(field => {
                            if (field.name && !field.closest('.input-group')) {
                                const li = document.createElement('li');
                                li.textContent = `${field.labels[0].textContent} is invalid`;
                                summary.appendChild(li);
                            }
                        });
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            document.querySelectorAll('.form-control').forEach(input => {
                input.addEventListener('input', function () {
                    if (this.checkValidity()) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    } else {
                        this.classList.remove('is-valid');
                        this.classList.add('is-invalid');
                    }
                });
            });
        })();
    </script>
}
