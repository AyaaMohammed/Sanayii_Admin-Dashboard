@model Admin_Dashboard.ViewModels.AdminViewModel

@{
    ViewData["Title"] = "Edit Admin";
    ViewBag.pagename = " Edit Admin";
}

<partial name="_Banner" />

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Edit Admin</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <h4 class="mb-3 text-secondary">User Info</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FName" class="form-label">First Name</label>
                        <input asp-for="FName" class="form-control" />
                        <span asp-validation-for="FName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LName" class="form-label">Last Name</label>
                        <input asp-for="LName" class="form-control" />
                        <span asp-validation-for="LName" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Age" class="form-label">Age</label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Street" class="form-label">Street</label>
                        <input asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-4">
                    <label asp-for="Government" class="form-label">Government</label>
                    <input asp-for="Government" class="form-control" />
                    <span asp-validation-for="Government" class="text-danger"></span>
                </div>

                <h5 class="mt-4 text-secondary">Phone Numbers</h5>
                <div class="mb-3" id="phoneNumbers">
                    @for (int i = 0; i < Model.Phones.Count; i++)
                    {
                        <div class="input-group mb-2">
                            <span class="input-group-text">Phone @(i + 1)</span>
                            <input name="Phones[@i]" class="form-control" value="@Model.Phones[i]" />
                        </div>
                    }
                </div>
                <button type="button" id="addPhone" class="btn btn-outline-secondary mb-3">Add Phone</button>

                <h4 class="mb-3 text-secondary">Admin Info</h4>
                <div class="mb-4">
                    <label asp-for="Salary" class="form-label">Salary</label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("addPhone").addEventListener("click", function () {
            const index = document.querySelectorAll('#phoneNumbers input').length;
            const container = document.getElementById("phoneNumbers");
            const div = document.createElement("div");
            div.classList.add("input-group", "mb-2");
            div.innerHTML = `<span class="input-group-text">Phone ${index + 1}</span><input name="Phones[${index}]" class="form-control" />`;
            container.appendChild(div);
        });
    </script>
}