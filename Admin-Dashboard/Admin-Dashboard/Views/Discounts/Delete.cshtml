@model Admin_Dashboard.Models.Discount

@{
    ViewData["Title"] = "Delete Discount";
    ViewBag.pagename = "Discounts";
}

<partial name="_Banner" />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h1 class="fw-bold text-2xl text-dark mb-4 align-center">Confirm Deletion</h1>
        </div>
        <div class="card-body">
            <p class="lead">Are you sure you want to delete this discount?</p>

            <dl class="row">
                <dt class="col-sm-4 text-muted">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 text-muted">Amount</dt>
                <dd class="col-sm-8">@Model.Amount</dd>

                <dt class="col-sm-4 text-muted">Min Required Requests</dt>
                <dd class="col-sm-8">@Model.MinRequiredRequests</dd>

                <dt class="col-sm-4 text-muted">Is Fixed Amount</dt>
                <dd class="col-sm-8">
                    @(Model.IsFixedAmount == true ? "Yes" : Model.IsFixedAmount == false ? "No" : "N/A")
                </dd>

                <dt class="col-sm-4 text-muted">Is Percentage</dt>
                <dd class="col-sm-8">
                    @(Model.IsPercentage == true ? "Yes" : Model.IsPercentage == false ? "No" : "N/A")
                </dd>

                <dt class="col-sm-4 text-muted">Expire Date</dt>
                <dd class="col-sm-8">
                    @(Model.ExpireDate.HasValue ? Model.ExpireDate.Value.ToShortDateString() : "N/A")
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>