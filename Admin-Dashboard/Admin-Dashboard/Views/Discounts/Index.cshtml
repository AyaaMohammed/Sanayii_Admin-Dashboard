@model IEnumerable<Admin_Dashboard.Models.Discount>

@{
    ViewData["Title"] = "Discounts Management";
    ViewBag.pagename = "Discounts";
}

<style>
    .discount-table th {
        white-space: nowrap;
        vertical-align: middle;
    }

    .badge-boolean {
        padding: 0.35em 0.65em;
        font-size: 0.75em;
        font-weight: 500;
    }

    .expire-date-cell {
        position: relative;
    }

    .expire-date-badge {
        font-size: 0.75em;
        font-weight: 500;
        padding: 0.4em 0.7em;
        border-radius: 0.375rem;
    }

    .expired {
        background-color: #fee2e2;
        color: #dc2626;
    }

    .active {
        background-color: #dcfce7;
        color: #16a34a;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .action-buttons .btn {
        min-width: 80px;
    }

    .amount-cell {
        font-weight: 500;
        color: #2c3e50;
    }
</style>

<partial name="_Banner" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-lg me-1"></i> Add New Discount
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 discount-table">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Min Requests</th>
                            <th>Fixed</th>
                            <th>Percentage</th>
                            <th>Expire Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var isExpired = item.ExpireDate.HasValue && item.ExpireDate.Value < DateTime.Now;
                            <tr>
                                <td class="align-middle fw-semibold">@item.Name</td>
                                <td class="align-middle amount-cell">@($"EGP {item.Amount:N2}")</td>
                                <td class="align-middle">@item.MinRequiredRequests</td>
                                <td class="align-middle">
                                    @if (item.IsFixedAmount == true)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success badge-boolean">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary badge-boolean">No</span>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (item.IsPercentage == true)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success badge-boolean">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary badge-boolean">No</span>
                                    }
                                </td>
                                <td class="align-middle expire-date-cell">
                                    @if (item.ExpireDate.HasValue)
                                    {
                                        <span class="expire-date-badge @(isExpired ? "expired" : "active")">
                                            @item.ExpireDate.Value.ToString("yyyy-MM-dd")
                                            @if (isExpired)
                                            {
                                                <i class="bi bi-exclamation-circle ms-1"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-check-circle ms-1"></i>
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info">No expiration</span>
                                    }
                                </td>
                                <td class="align-middle text-end">
                                    <div class="d-flex justify-content-end gap-2 action-buttons">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary d-flex align-items-center">
                                            <i class="bi bi-pencil me-1"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary d-flex align-items-center">
                                            <i class="bi bi-eye me-1"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger d-flex align-items-center"
                                           onclick="return confirm('Are you sure you want to delete this discount?')">
                                            <i class="bi bi-trash me-1"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>