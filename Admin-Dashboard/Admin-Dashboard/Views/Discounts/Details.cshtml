@model Admin_Dashboard.Models.Discount

@{
    ViewData["Title"] = "Discount Details";
    ViewBag.pagename = "Discounts";
}

<partial name="_Banner" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-2xl text-dark mb-4 align-center">Discount Details</h1>

        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary me-2">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>
                <dt class="col-sm-4 text-muted">Amount</dt>
                <dd class="col-sm-8">@($"EGP {Model.Amount:N2}")</dd>

                <dt class="col-sm-4 text-muted">Min Required Requests</dt>
                <dd class="col-sm-8">@Model.MinRequiredRequests</dd>

                <dt class="col-sm-4 text-muted">Is Fixed Amount</dt>
                <dd class="col-sm-8">
                    @if (Model.IsFixedAmount == true)
                    {
                        <span class="badge bg-primary">Yes</span>
                    }
                    else if (Model.IsFixedAmount == false)
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                    else
                    {
                        <span class="badge bg-light text-muted border">N/A</span>
                    }
                </dd>

                <dt class="col-sm-4 text-muted">Is Percentage</dt>
                <dd class="col-sm-8">
                    @if (Model.IsPercentage == true)
                    {
                        <span class="badge bg-info text-dark">Yes</span>
                    }
                    else if (Model.IsPercentage == false)
                    {
                        <span class="badge bg-light text-muted border">No</span>
                    }
                    else
                    {
                        <span class="badge bg-light text-muted border">N/A</span>
                    }
                </dd>

                <dt class="col-sm-4 text-muted">Expire Date</dt>
                <dd class="col-sm-8">
                    @(Model.ExpireDate.HasValue ? Model.ExpireDate.Value.ToShortDateString() : "N/A")
                </dd>
            </dl>
        </div>
    </div>
</div>