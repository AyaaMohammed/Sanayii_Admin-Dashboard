@model Admin_Dashboard.Models.Discount

@{
    ViewData["Title"] = "Create Discount";
    ViewBag.pagename = "Discounts";
}

<partial name="_Banner" />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="fw-bold text-2xl text-dark mb-4 align-center">Create New Discount</h1>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MinRequiredRequests" class="form-label"></label>
                    <input asp-for="MinRequiredRequests" class="form-control" />
                    <span asp-validation-for="MinRequiredRequests" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IsFixedAmount" class="form-label"></label>
                    <select asp-for="IsFixedAmount" class="form-select">
                        <option value="">Select</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="IsFixedAmount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IsPercentage" class="form-label"></label>
                    <select asp-for="IsPercentage" class="form-select">
                        <option value="">Select</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="IsPercentage" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ExpireDate" class="form-label"></label>
                    <input asp-for="ExpireDate" class="form-control" type="date" />
                    <span asp-validation-for="ExpireDate" class="text-danger"></span>
                </div>

                <div class="d-flex">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-plus-circle"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>