@{
    ViewData["Title"] = "Manage Violations";
    ViewBag.pagename = "Manage Violations";
}
@model List<Review>
<partial name="_Banner" />
<section "container p-3">
    <div class="table-container p-5">
        <table class="Mtable table-hover">
            <thead>
                <tr>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Artisan Name</th>
                    <th scope="col">Service Name</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Comment</th>
                    <th scope="col">ReviewDate</th>
                    <th scope="col">Contain Violation</th>
                    <th scope="col" colspan="2"> Buttons</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr style="margin-bottom:5px;">
                        <td>@c.Customer.FName @c.Customer.LName</td>
                        <td>@c.Artisan.FName @c.Artisan.LName</td>
                        <td>@c.Service.ServiceName</td>
                        <td>@c.Rating</td>
                        <td>@c.Comment</td>
                        <td>@c.ReviewDate</td>
                        <td>@c.isViolate</td>
                        <td><a asp-action="AcceptAsViolation" asp-route-id="@c.Id" class="btn btn-outline-dark">Accept</a></td>
                        <td><a asp-action="IgnoreViolation" asp-route-id="@c.Id" class="btn btn-outline-dark">Ignore</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
