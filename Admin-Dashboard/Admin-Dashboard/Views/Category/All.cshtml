@model List<Category>

@{
    ViewBag.Title = "Category";
    ViewBag.pagename = "Category";
}

<partial name="_Banner" />

<section class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4 flex-column flex-md-row text-center text-md-start">
                <h3 class="mb-3 mb-md-0">Categories</h3>
                <a asp-action="Add" asp-controller="Category" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> New
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col" style="min-width: 200px";  class="text-center">Name</th>
                            <th scope="col" colspan="3" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var p in Model)
                            {
                                <tr>
                                    <td class="text-start ps-2 text-center ">@p.Name</td>
                                    <td>
                                        <a asp-action="Detail" asp-controller="Category" asp-route-id="@p.Id" class="btn btn-outline-secondary btn-sm w-100">
                                            <i class="bi bi-eye"></i> Detail
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@p.Id" class="btn btn-outline-success btn-sm w-100">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@p.Id"
                                           class="btn btn-outline-danger btn-sm w-100"
                                           onclick="return confirm('Are you sure you want to delete this category?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-muted">No categories found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
