@model Category
@{
    ViewBag.Title = "Category";
    ViewBag.pagename = "Category";

}

<style>
    input {
        width: 60%;
    }

        input[type=file] {
            background-color: #fff;
            border: 1px solid #d2cbcb;
            border-radius: 3px;
            color: black;
        }
</style>
<partial name="_Banner" />
<section class="container" style="
    margin-top: 3%;
    margin-bottom: 3%;
">
    <div class="form">
        <form method="post" asp-action="Add" asp-controller="Category">
            <h1 class="fw-bold text-2xl text-dark mb-4 align-center">Add New Category </h1>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="text-align:center;background-color:#262e39;
        color:#fff;width: 119px;height: 50px;margin-bottom:30px">
                Submit
            </button>
        </form>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>