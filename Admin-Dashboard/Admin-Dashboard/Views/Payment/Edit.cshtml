@{
    ViewData["Title"] = "Payemnt";
    ViewBag.pagename = "Payment";
    var paymentMethods = new Dictionary<int, string> {
        { 1, "Cash" },
        { 2, "Credit Card" },
        { 3, "PayPal"  },
        { 4, "Bank Transfer" }
    };
	var paymentStatus = new Dictionary<int, string> {
		{ 1, "Pending" },
		{ 2, "Completed" },
		{ 3, "Failed" },
		{ 4, "Canceled" },
		{ 5, "Refunded" },
		{ 6, "On Hold"  }
	};

}
@model Payment

<style>
    input {
        width: 60%;
    }

        input[type=file] {
            background-color: #fff;
            border: 1px solid #d2cbcb;
            border-radius: 3px;
            color: black;
        }
</style>
<partial name="_Banner" />
<section class="container" style="
    margin-top: 3%;
    margin-bottom: 3%;
">
    <div class="form">
        <form method="post" asp-action="Edit" asp-controller="Payment">
            <h1 class="fw-bold text-2xl text-dark mb-4 align-center">Edit Payment Process</h1>

            <div class="form-group">
                <label asp-for="Amount">Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" class="form-control">
                    @foreach (var s in paymentStatus)
                    {
                        <option value="@s.Key">@s.Value</option>
                    }
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Method">Method</label>
                <select asp-for="Method" class="form-control">
                    @foreach (var method in paymentMethods)
                    {
                        <option value="@method.Key">@method.Value</option>
                    }
                </select>
                <span asp-validation-for="Method" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="text-align:center;background-color:#262e39;
        color:#fff;width: 119px;height: 50px;margin-bottom:30px">
                Submit
            </button>
        </form>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>