@model Violation
@{
    ViewData["Title"] = "Create";
    ViewBag.pagename = "Violation";
}

<style>
    input {
        width: 60%;
    }

        input[type=file] {
            background-color: #fff;
            border: 1px solid #d2cbcb;
            border-radius: 3px;
            color: black;
        }
</style>
<partial name="_Banner" />
<section class="container" style="
    margin-top: 3%;
    margin-bottom: 3%;
">
    <div class="form">
        <form method="post" asp-action="Create" asp-controller="Violations">
            <h1 class="fw-bold text-2xl text-dark mb-4 align-center">Add Violation</h1>
            <div class="form-group">
                <label asp-for="Reason">Reason</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date">Date</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractId" class="control-label"></label>
                <select asp-for="ContractId" class="form-control" asp-items="ViewBag.ContractId"></select>
            </div>

            <button type="submit" class="btn btn-primary" style="text-align:center;background-color:#262e39;
        color:#fff;width: 119px;height: 50px;margin-bottom:30px">
                Submit
            </button>

        </form>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>