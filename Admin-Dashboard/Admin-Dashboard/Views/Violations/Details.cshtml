@{
    ViewData["Title"] = "Details";
    ViewBag.pagename = "Violation";
}
@model Violation

<partial name="_Banner" />

<section class="container my-5">
    <div class="card shadow-lg mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h1 class="fw-bold fs-2 text-center mb-4">Violation  Detail</h1>
            <p class="card-text text-2xl mb-2"><strong>Reason:</strong> @Model.Reason</p>
            <p class="card-text text-2xl mb-4"><strong>Date:</strong> @Model.Date</p>
            <p class="card-text text-2xl mb-4"><strong>Contract Owner:</strong> @Model.Contract.Artisan.UserName</p>
            <a asp-action="Index" class="btn w-100 text-white" style="background-color:#262e39;">← Back to List</a>
        </div>
    </div>
</section>